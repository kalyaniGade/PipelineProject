pipeline {
	agent any 
	stages {
		stage ('Build') {
		steps {
			sh 'gradle clean build'
			}
		}
		stage ('Test') {
		steps {
			sh 'gradle test'
			junit 'reports/**/*.xml'
			}
		}
		stage ('Sonarqube') {
		steps {
			sh 'gradle sonarqube'
			}
		}
		stage ('Release') {
		steps {
			echo 'Release stage '
			}
		}
	}
}